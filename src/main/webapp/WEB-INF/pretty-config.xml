<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces">

    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/faces/login.xhtml"/>
    </url-mapping>
    <url-mapping id="loginError">
        <pattern value="/login-error"/>
        <view-id value="/faces/login-error.xhtml"/>
    </url-mapping>

    <url-mapping id="home">
        <pattern value="/app"/>
        <view-id value="/faces/restricted/home.xhtml"/>
    </url-mapping>

    <url-mapping id="createUser">
        <pattern value="/app/users/new"/>
        <view-id value="/faces/restricted/new-user.xhtml"/>
        <action>#{userViewModel.load}</action>
    </url-mapping>

    <url-mapping id="viewUser">
        <pattern value="/app/users/#{id: userViewModel.id}"/>
        <view-id value="/faces/restricted/view-user.xhtml"/>
        <action>#{userViewModel.load}</action>
    </url-mapping>
</pretty-config>
